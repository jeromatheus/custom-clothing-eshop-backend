{
  "openapi": "3.0.1",
  "info": {
    "title": "Api",
    "version": "1.0"
  },
  "paths": {
    "/products/{id}": {
      "get": {
        "tags": [
          "Catalog"
        ],
        "summary": "Obtener los detalles completos de un producto por Id y Color",
        "operationId": "GetProductById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetProductVariantDetailByIdResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/products/attributes": {
      "get": {
        "tags": [
          "Catalog"
        ],
        "summary": "Obtener detalles, stock y fotos por combinaci√≥n de atributos",
        "operationId": "GetProductByAttributes",
        "parameters": [
          {
            "name": "Garment",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Neck",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Fit",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Material",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Warmth",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductVariantDetailDto"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/products/type/{productType}": {
      "get": {
        "tags": [
          "Catalog"
        ],
        "summary": "Obtener productos por tipo de prenda",
        "operationId": "GetProductsByType",
        "parameters": [
          {
            "name": "productType",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetFeaturedProductVariantsByTypeResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ColorVariantDto": {
        "type": "object",
        "properties": {
          "variantId": {
            "type": "string",
            "format": "uuid"
          },
          "colorName": {
            "type": "string",
            "nullable": true
          },
          "sizes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SizeStockDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ColorVariantSummaryDto": {
        "type": "object",
        "properties": {
          "variantId": {
            "type": "string",
            "nullable": true
          },
          "colorName": {
            "type": "string",
            "nullable": true
          },
          "imageUrl": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "FeaturedProductVariantDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "nullable": true
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "mainImageUrl": {
            "type": "string",
            "nullable": true
          },
          "hasStock": {
            "type": "boolean"
          },
          "colors": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ColorVariantSummaryDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "GetFeaturedProductVariantsByTypeResponse": {
        "type": "object",
        "properties": {
          "products": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FeaturedProductVariantDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "GetProductVariantDetailByIdResponse": {
        "type": "object",
        "properties": {
          "product": {
            "$ref": "#/components/schemas/ProductVariantDetailDto"
          }
        },
        "additionalProperties": false
      },
      "ModelDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "nullable": true
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "colorName": {
            "type": "string",
            "nullable": true
          },
          "heightInfo": {
            "type": "string",
            "nullable": true
          },
          "sizeInfo": {
            "type": "string",
            "nullable": true
          },
          "imageUrl": {
            "type": "string",
            "nullable": true
          },
          "carouselImages": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "ProductVariantDetailDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "garmentType": {
            "type": "string",
            "nullable": true
          },
          "neckType": {
            "type": "string",
            "nullable": true
          },
          "fitType": {
            "type": "string",
            "nullable": true
          },
          "materialType": {
            "type": "string",
            "nullable": true
          },
          "warmthLevel": {
            "type": "integer",
            "format": "int32"
          },
          "sizeChart": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SizeSpecDto"
            },
            "nullable": true
          },
          "variants": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ColorVariantDto"
            },
            "nullable": true
          },
          "models": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ModelDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "SizeSpecDto": {
        "type": "object",
        "properties": {
          "size": {
            "type": "string",
            "nullable": true
          },
          "chest": {
            "type": "number",
            "format": "double"
          },
          "length": {
            "type": "number",
            "format": "double"
          },
          "neck": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "SizeStockDto": {
        "type": "object",
        "properties": {
          "size": {
            "type": "string",
            "nullable": true
          },
          "stock": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      }
    }
  }
}